{
    "name": "ngelectron",
    "description": "Simple TODO application built with Electron and AngularJS with packaging.",
    "version": "0.0.1",
    "author": "Bhavin Patel <bhavin.ibm@hotmail.com>",
    "license": "MIT",
    "main": "./electron/electron.js",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "build-electron": "ng build --base-href . && copy ngelectron.ico dist",
        "electron": "npm run build-electron && electron .",
        "dist": "electron-builder --win --x64 --ia32"
    },
    "build": {
        "appId": "com.example.app",
        "asar": false,
        "compression": "store",
        "files": [
            "electron",
            "dist"
        ],
        "directories": {
            "buildResources": "build",
            "output": "releases"
        },
        "copyright": "Â©2017 Kandra Labs, Inc.",
        "win": {
            "target": "squirrel",
            "icon": "dist/ngelectron.ico",
            "publisherName": "Bhavin Patel"

        },
        "squirrelWindows": {
            "iconUrl": "http://www.iconeasy.com/icon/ico/Kids/Crazy%20Eye/CrazyEye%20Dance%20256x256.ico"
        }
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^4.0.0",
        "@angular/common": "^4.0.0",
        "@angular/compiler": "^4.0.0",
        "@angular/core": "^4.0.0",
        "@angular/forms": "^4.0.0",
        "@angular/http": "^4.0.0",
        "@angular/platform-browser": "^4.0.0",
        "@angular/platform-browser-dynamic": "^4.0.0",
        "@angular/router": "^4.0.0",
        "core-js": "^2.4.1",
        "rxjs": "^5.4.1",
        "zone.js": "^0.8.14",
        "electron-window-state": "^4.1.1"
    },
    "devDependencies": {
        "@angular/cli": "1.2.7",
        "@angular/compiler-cli": "^4.0.0",
        "@angular/language-service": "^4.0.0",
        "@types/jasmine": "~2.5.53",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "~6.0.60",
        "codelyzer": "~3.0.1",
        "electron-builder": "^19.24.1",
        "electron-builder-squirrel-windows": "^19.24.0",
        "electron-is-dev": "^0.1.2",
        "electron-prebuilt": "1.2.0",
        "electron-windows-installer": "^1.4.1",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.1.2",
        "ts-node": "~3.0.4",
        "tslint": "~5.3.2",
        "typescript": "~2.3.3"
    }
}